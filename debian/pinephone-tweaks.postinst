#!/bin/sh

echo "Creating boot script..."
mkimage -T script -A arm64 -C none -n pinephone -d /boot/boot.cmd /boot/boot.scr

/etc/kernel/postinst.d/zz-rename-files `uname -r`

if [ "$1" = "configure" ]; then
    # Automatically start USB gadget on boot
    systemctl unmask pinephone-camera-setup.service
    systemctl enable pinephone-camera-setup.service
fi
