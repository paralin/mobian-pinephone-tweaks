#!/bin/sh

set -e

if [ upgrade != "$1" ] || dpkg --compare-versions "$2" lt 0.8
then
    for app in firefox-esr
    do
        dpkg-divert --package pinephone-tweaks --add --rename \
                    --divert /usr/share/applications/$app.desktop.orig \
                    /usr/share/applications/$app.desktop
    done
fi
